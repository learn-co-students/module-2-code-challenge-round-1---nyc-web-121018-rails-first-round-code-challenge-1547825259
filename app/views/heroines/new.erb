<h1>Make a Heroine:</h1>
<% if !!flash[:errors] %>
<ul>
  <% flash[:errors].each do |e| %>
<li> <%= e %> </li>
<% end %>
</ul>
<% end %>
<%= form_for @heroine do |h| %>
<%= h.label :name %>
<%= h.text_field :name %>
<%= h.label :super_name %>
<%= h.text_field :super_name %>
<%=h.collection_select :power_id, @powers, :id, :name%>
<%= h.submit %>
<% end %>
