<h1>Create Heroine:</h1><br>

<% if !!flash[:errors] %>
  <ul>
    <% flash[:errors].each do |e| %>
      <li><%= e %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>
  <%= f.label :power_id %><br>
  <%= f.collection_select :power_id, @powers, :id, :name %><br>
  <%= f.submit %>
<% end %>
