<h1>Create Heroine: </h1>

<% if !!flash[:errors] %>
  <h2>ERRORS:</h2>
  <ul>
  <% flash[:errors].each do |m| %>
    <li><%= m %></li>
  <% end %>
  </ul>
  <br>
  <br>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>

  <%= f.label "Select A Power" %><br>
  <%= f.collection_select :power_id, @powers, :id, :name %><br>
  <br>
  <%= f.submit %>
<% end %>
