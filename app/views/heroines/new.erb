
<h1> Create a new heroine! </h1>

<%if !!flash[:errors]%>
<%flash[:errors].each do |error|%>
<%=error%>
<%end%>
<%end%>


<%=form_for @heroine do |f| %>
<%=f.label :name %>
<%=f.text_field :name %>
<%=f.label :super_name %>
<%=f.text_field :super_name %>
<%=f.label :power_id %>
<% powers = Power.all %>
<%= f.collection_select :power_id, powers, :id, :name %>
<%=f.submit %>
<%end%>


